{
  "manifest_version": 3,
  "name": "Web Ciencias Appearance Modifier",
  "version": "1.0",
  "description": "Extension to modify the appearance of the UNAM Facultad de Ciencias website",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://web.fciencias.unam.mx/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://web.fciencias.unam.mx/*"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Web Ciencias Modifier",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}