{
  "manifest_version": 3,
  "name": "Web Fac Ciencias - Mas bonita",
  "description": "Mejora la experiencia visual del portal de servicios estudiantiles.",
  "version": "1.0.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "unam-ciencias-personalizador@fciencias.unam.mx",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "icons": {
    "16": "icon-16.jpg",
    "32": "icon-32.jpg",
    "48": "icon-48.jpg",
    "128": "icon-128.jpg"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.fciencias.unam.mx/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Web Fac Ciencias - Mas bonita",
    "default_icon": {
      "16": "icon-16.jpg",
      "32": "icon-32.jpg",
      "48": "icon-48.jpg",
      "128": "icon-128.jpg"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://web.fciencias.unam.mx/*"
  ],
  "homepage_url": "https://github.com/dvd-22/extension-web-ciencias"
}
